@model StudentNotes.Models.Student

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>New Student</h2>
}
else
{
    <h2>Student Details</h2>
}



@using (Html.BeginForm("Save", "Student"))
{
    <div class="form-group">
        @Html.LabelFor(n => n.Name)
        @Html.TextAreaFor(n => n.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Address)
        @Html.TextAreaFor(n => n.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Phone)
        @Html.TextAreaFor(n => n.Phone, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(n => Model.Id)

    <button type="submit" class="btn btn-primary">Save</button>
   
   


}